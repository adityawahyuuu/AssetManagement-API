<?xml version="1.0" encoding="utf-8"?>
<RunSettings>
  <!-- Configuration for test execution -->
  <RunConfiguration>
    <!-- Maximum number of threads to use for parallel test execution -->
    <MaxCpuCount>0</MaxCpuCount>

    <!-- Path relative to solution directory -->
    <ResultsDirectory>.\TestResults</ResultsDirectory>

    <!-- [x86] | x64: architecture of test host process -->
    <TargetPlatform>x64</TargetPlatform>

    <!-- Framework to use for tests: net8.0 -->
    <TargetFrameworkVersion>net8.0</TargetFrameworkVersion>

    <!-- Disable app domains to improve test performance -->
    <DisableAppDomain>True</DisableAppDomain>
  </RunConfiguration>

  <!-- Configurations for data collectors -->
  <DataCollectionRunSettings>
    <DataCollectors>
      <!-- Code coverage data collector -->
      <DataCollector friendlyName="Code Coverage" uri="datacollector://Microsoft/CodeCoverage/2.0" assemblyQualifiedName="Microsoft.VisualStudio.Coverage.DynamicCoverageDataCollector, Microsoft.VisualStudio.TraceCollector, Version=11.0.0.0, Culture=neutral, PublicKeyToken=b03f5f7f11d50a3a">
        <Configuration>
          <CodeCoverage>
            <ModulePaths>
              <Include>
                <ModulePath>.*API\.dll$</ModulePath>
              </Include>
              <Exclude>
                <ModulePath>.*Tests\.dll$</ModulePath>
              </Exclude>
            </ModulePaths>
          </CodeCoverage>
        </Configuration>
      </DataCollector>

      <!-- XPlat code coverage -->
      <DataCollector friendlyName="XPlat code coverage">
        <Configuration>
          <Format>json,cobertura,lcov,opencover</Format>
        </Configuration>
      </DataCollector>
    </DataCollectors>
  </DataCollectionRunSettings>

  <!-- Parameters for LoggerRunSettings -->
  <LoggerRunSettings>
    <Loggers>
      <!-- Console logger for immediate feedback -->
      <Logger friendlyName="console" enabled="True">
        <Configuration>
          <Verbosity>normal</Verbosity>
        </Configuration>
      </Logger>

      <!-- TRX logger for test results file -->
      <Logger friendlyName="trx" enabled="True">
        <Configuration>
          <LogFileName>test-results.trx</LogFileName>
        </Configuration>
      </Logger>
    </Loggers>
  </LoggerRunSettings>

  <!-- Informational Messages and Test Report Documentation -->
  <!--
    TEST REPORT GENERATION WORKFLOW:

    Step 1: Run tests
    - Command: dotnet test --logger "trx;LogFileName=test-results.trx" --results-directory ./TestResults
    - This command uses the settings in this file (test.runsettings)
    - Generates: TestResults/test-results.trx (test results XML)
    - Generates: TestResults/coverage.cobertura.xml (code coverage)

    Alternative command with code coverage collection:
    - Command: dotnet test --collect:"XPlat Code Coverage" --logger "trx;LogFileName=test-results.trx" --results-directory ./TestResults

    Step 2: Generate custom HTML report
    - Command: .\GenerateCustomTestReport.ps1
    - Generates: custom-test-report.html (interactive report)
    - Automatically creates TestResults directory if it doesn't exist

    OUTPUT FILES:

    1. test-results.trx (TRX Format)
       - Standard test results in XML format
       - Can be opened in Visual Studio or other test result viewers
       - Contains detailed test outcome information
       - Overwrites on each test run (you can rename it to preserve previous results)

    2. custom-test-report.html (Custom Interactive HTML Report)
       - Generated from GenerateCustomTestReport.ps1
       - Human-readable HTML test report with interactive filtering
       - Shows test summary, results table, and error details
       - Features: Filter by Passed/Failed/Skipped outcomes
       - Open in any web browser to view results

    3. coverage.cobertura.xml (Code Coverage Report)
       - Code coverage data in Cobertura format
       - Can be viewed in various code coverage viewers
       - Generated when -collect:"XPlat Code Coverage" is used

    VIEWING RESULTS:

    - Custom HTML Report (Recommended): TestResults/custom-test-report.html
    - TRX Files (Visual Studio): TestResults/test-results.trx

    INTERPRETING RESULTS:

    - Passed: Test executed successfully and all assertions passed
    - Failed: Test executed but one or more assertions failed (error details shown)
    - Skipped: Test was not executed (may be marked as ignored or conditional)
  -->

  <!-- xUnit specific settings -->
  <xUnit>
    <!-- Maximum threads for parallel execution -->
    <MaxParallelThreads>0</MaxParallelThreads>

    <!-- Parallelization mode: collections or assemblies -->
    <ParallelizeAssembly>false</ParallelizeAssembly>
    <ParallelizeTestCollections>true</ParallelizeTestCollections>

    <!-- Diagnostics -->
    <DiagnosticMessages>false</DiagnosticMessages>
    <InternalDiagnosticMessages>false</InternalDiagnosticMessages>
  </xUnit>
</RunSettings>
